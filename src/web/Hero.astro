---
import min from '@/assets/img/min.webp'
import Button from '@/shared/components/Button.astro'
import FloatContainer from '@/shared/components/FloatContainer.astro'
import KPI from '@/shared/components/KPI.astro'
import PushNotification from '@/shared/components/PushNotification.astro'
import { Image } from 'astro:assets'
---

<div class='hero'>
  <div class='wrapper hero-grid'>
    <div class='hero-image'>
      <div class='hero-image-container'>
        <FloatContainer top={-95} left={50}>
          <PushNotification
            appName={'Gadmin App'}
            displayTime={'Hace 1 minuto'}
            message={'¡Felicidades! Recibiste 1 nuevo pedido en Tu Tienda.'}
          />
        </FloatContainer>
        <Image src={min} width={350} height={350} alt='Personaje de Gadmin' loading='eager' />
        <FloatContainer top={400} right={-50}>
          <KPI
            message={'Ventas del mes'}
            amount={1578}
            increasePercentage={200}
            increaseFrequency={'yearly'}
          />
        </FloatContainer>
      </div>
    </div>
    <div class='hero-content'>
      <h1 class='hero-big-title'>
        Crea tu tienda online<br class='hero-big-title-br' /> en 5 minutos
      </h1>
      <h2 class='hero-title'>Sin conocimientos técnicos</h2>
      <p class='hero-description'>
        Aumenta las ventas de tu negocio hasta un <span class='text-primary'>90%</span> en el primer
        trimestre.
      </p>
      <div class='hero-cta'>
        <Button href='https://stores.gadmin.app/login' target='_blank' mode='default'
          >¡Empieza ya!</Button
        >
      </div>
    </div>
  </div>
</div>

<style>
  .hero {
    background-color: #0eaaf9;
    background-image: linear-gradient(135deg, #01283c, #052112);
    position: relative;
    min-height: 100svh;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('../assets/img/circles.svg');
    background-repeat: no-repeat;
    background-size: cover;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 4fr 6fr;
    gap: 1rem;
    min-height: calc(100svh - 7rem);
    padding: 6rem 1rem;
    padding-bottom: 1rem;
    position: relative;
    z-index: 2;
  }

  .hero-image {
    display: flex;
    align-items: center;
    height: auto;
    min-height: 300px;
    position: relative;
  }

  .hero-image-container {
    width: 100%;
    position: relative;
  }

  .hero-image img {
    width: 100%;
    max-width: 500px;
    height: auto;
    aspect-ratio: 1 / 1;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
  }

  .hero-big-title,
  .hero-title,
  .hero-description {
    text-align: right;
    margin: 0.25rem 0;
  }

  .hero-big-title {
    color: var(--white);
    font-size: var(--64-pt);
  }

  .hero-title {
    width: fit-content;
    font-size: var(--40-pt);
    background: linear-gradient(to right, var(--secondary), var(--primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-description {
    color: var(--white);
    font-size: var(--32-pt);
  }

  .hero-cta {
    margin-top: 2rem;
  }

  @media screen and (max-width: 768px) {
    .hero {
      min-height: auto;
    }

    .hero::before {
      background-image: none;
    }

    .hero-grid {
      min-height: 6rem;
      grid-template-columns: 1fr;
    }

    .hero-image {
      justify-content: center;
      max-width: 400px;
      margin: 0 auto;
    }

    .hero-content {
      align-items: center;
      padding: 1rem;
    }

    .hero-big-title,
    .hero-title,
    .hero-description {
      text-align: center;
      margin: 0.25rem 0;
    }

    .hero-big-title-br {
      display: none;
    }
  }
</style>
