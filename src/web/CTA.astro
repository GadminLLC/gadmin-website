---
import Button from '@/shared/components/Button.astro'
---

<div class='cta'>
  <div class='wrapper cta-container' data-aos='fade-up'>
    <div class='cta-content'>
      <h2 class='cta-title' data-aos='fade-right'>
        Aumenta <span>el alcance</span> de tu negocio.
      </h2>
      <h3 class='cta-subtitle' data-aos='fade-left'>
        Empieza a usar <span style='text-transform: uppercase;'>Gadmin</span> hoy.
      </h3>
      <Button href='https://stores.gadmin.app/login' target='_blank' mode='default'
        >Â¡Empieza ahora mismo!</Button
      >
    </div>
  </div>
</div>

<style>
  .cta {
    background-color: var(--shade-03);
    color: var(--white);
    padding: 4rem 1rem;
  }

  .cta-container {
    padding: 0.25rem;
    background-color: var(--primary);
    background-image: linear-gradient(to right, var(--primary), var(--secondary));
    border-radius: 8px;
  }

  .cta-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 1rem;
    background-color: var(--shade-03);
    border-radius: 8px;
  }

  .cta-title,
  .cta-subtitle {
    margin: 0;
    margin-bottom: 1rem;
    color: var(--white);
    text-align: center;
    font-size: var(--48-pt);
  }

  .cta-subtitle {
    font-size: var(--40-pt);
  }

  .cta-title span,
  .cta-subtitle span {
    background: linear-gradient(to right, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media screen and (max-width: 768px) {
    .cta-content {
      padding: 3rem 0.5rem;
    }
  }
</style>
