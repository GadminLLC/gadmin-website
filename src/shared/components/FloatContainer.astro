---
const { top, right, bottom, left } = Astro.props
---

<div
  class='float-container'
  style={`
    ${top !== undefined ? `top: ${top}px;` : ''}
    ${bottom !== undefined && top === undefined ? `bottom: ${bottom}px;` : ''}
    ${right !== undefined ? `right: ${right}px; left: auto;` : ''}
    ${left !== undefined ? `left: ${left}px; right: auto;` : ''}
  `}
>
  <div class='float-container__body'>
    <slot />
  </div>
</div>

<style>
  .float-container {
    background-image: linear-gradient(-45deg, #f1fcf526 15%, #eff9ffbf);
    position: absolute;
    padding: 1px;
    border-radius: 1rem;
    transform: translateY(0px);
    transition: 0.2s ease transform;
    will-change: transform;
  }

  .float-container__body {
    background-color: #062d4b;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    border-radius: 16px;
    padding: 1rem;
  }

  @media screen and (max-width: 768px) {
    .float-container {
      display: none;
    }
  }

  @media screen and (max-height: 800px) {
    .float-container {
      transform: translateY(4rem);
    }
  }
</style>
