---
import WhatsAppIcon from '../icons/WhatsApp.astro'
import XMark from '../icons/X-Mark.astro'
---

<script>
  const whatsApp = document.getElementById('whatsApp')
  const buttonIconContainer = document.getElementById('iconContainer')
  const whatsAppIcon = document.getElementById('whatsAppIcon')
  const whatsAppXmark = document.getElementById('whatsAppXmark')

  buttonIconContainer?.addEventListener('click', () => {
    whatsApp?.classList.toggle('whatsApp-open')
    updateState()
  })

  function updateState() {
    console.log('aaa')
    if (whatsApp?.classList.contains('whatsApp-open')) {
      whatsAppIcon?.classList.add('whatsApp__icon-close')
      whatsAppXmark?.classList.remove('whatsApp__icon-close')
    } else {
      whatsAppIcon?.classList.remove('whatsApp__icon-close')
      whatsAppXmark?.classList.add('whatsApp__icon-close')
    }
  }
</script>

<div id='whatsApp' class='whatsApp'>
  <div class='whatsApp__text-container'>
    <span class='whatsApp__text whatsApp__text-question'>Â¿Necesitas ayuda?</span>
    <span class='whatsApp__text whatsApp__text-answer'>Habla con nosotros</span>
  </div>
  <div id='iconContainer' class='whatsApp__icon-container'>
    <div id='whatsAppIcon' class='whatsApp__icon'>
      <WhatsAppIcon size={40} color='#FFFFFF' />
    </div>
    <div id='whatsAppXmark' class='whatsApp__icon whatsApp__icon-close'>
      <XMark size={40} color='#FFFFFF' />
    </div>
  </div>
</div>

<style>
  .whatsApp {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    cursor: pointer;
  }

  .whatsApp__text-container {
    opacity: 0;
    display: flex;
    flex-direction: column;
    background-color: rgba(255, 255, 255, 0.733);
    border-radius: 5px;
    padding: 5px 10px;
    transition: all 0.4s ease;
  }

  .whatsApp:hover .whatsApp__text-container {
    opacity: 1;
  }

  .whatsApp__text {
    font-size: 0.9rem;
    font-weight: 300;
    text-align: center;
  }

  .whatsApp__text-answer {
    font-weight: bold;
  }

  .whatsApp__icon-container {
    background-color: #2db742;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    width: 56px;
    height: 56px;
    transform: rotate(0deg);
    transition: all 0.3s ease;
  }

  .whatsApp-open .whatsApp__icon-container {
    transform: rotate(360deg);
  }

  .whatsApp__icon {
    position: absolute;
    display: grid;
    align-content: center;
    transform: scale(1);
    transition: transform 0.3s ease;
  }

  .whatsApp__icon-close {
    transform: scale(0);
  }
</style>
