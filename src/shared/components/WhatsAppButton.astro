---
import WhatsAppIcon from './icons/WhatsApp.astro'
import XMark from './icons/X-Mark.astro'

interface Props {
  top?: number
  right?: number
  bottom?: number
  left?: number
}

const { top, right, bottom, left } = Astro.props
---

<script>
  const button = document.getElementById('whatsAppButton')
  const buttonIconContainer = document.getElementById('iconContainer')
  const whatsAppIcon = document.getElementById('whatsAppIcon')
  const whatsAppXmark = document.getElementById('whatsAppXmark')
  button?.addEventListener('click', () => {
    buttonIconContainer?.classList.toggle('whatsApp__icon-container-activate')
    whatsAppIcon?.classList.toggle('whatsApp__icon-close')
    whatsAppXmark?.classList.toggle('whatsApp__icon-close')
  })
</script>

<div
  id='whatsAppButton'
  class='whatsApp'
  style={`
  ${top !== undefined ? `top: ${top}rem;` : ''}
  ${bottom !== undefined && top === undefined ? `bottom: ${bottom}rem;` : ''}
  ${right !== undefined ? `right: ${right}rem; left: inherit;` : ''}
  ${left !== undefined ? `left: ${left}rem; right: inherit;` : ''}
`}
>
  <div class='whatsApp__text-container'>
    <span class='whatsApp__text whatsApp__text-question'>Â¿Necesitas ayuda?</span>
    <span class='whatsApp__text whatsApp__text-answer'>Habla con nosotros</span>
  </div>
  <div id='iconContainer' class='whatsApp__icon-container'>
    <div id='whatsAppIcon' class='whatsApp__icon'>
      <WhatsAppIcon size={40} color='#FFFFFF' />
    </div>
    <div id='whatsAppXmark' class='whatsApp__icon whatsApp__icon-close'>
      <XMark size={40} color='#FFFFFF' />
    </div>
  </div>
</div>

<style>
  .whatsApp {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    cursor: pointer;
  }

  .whatsApp__text-container {
    transition: all 0.4s ease;
    opacity: 0;
    display: flex;
    flex-direction: column;
  }

  .whatsApp:hover .whatsApp__text-container {
    opacity: 1;
  }

  .whatsApp__text {
    font-size: 0.9rem;
    color: white;
    font-weight: 300;
    text-align: center;
  }

  .whatsApp__text-answer {
    font-weight: bold;
  }

  .whatsApp__icon-container {
    background-color: #2db742;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    width: 53px;
    height: 53px;
    transform: rotate(0deg);
    transition: all 0.3s ease;
  }

  .whatsApp__icon-container-activate {
    transform: rotate(360deg);
  }

  .whatsApp__icon {
    position: absolute;
    display: grid;
    align-content: center;
    transform: scale(1);
    transition: transform 0.3s ease;
  }

  .whatsApp__icon-close {
    transform: scale(0);
  }
</style>
