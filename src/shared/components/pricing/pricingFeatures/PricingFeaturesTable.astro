---
import PricingFeaturesTableFeature from './PricingFeaturesTableFeature.astro'
---

<section class='table'>
  <PricingFeaturesTableFeature
    isBool={true}
    feature='Recibir pedidos en WhatsApp'
    bronze={true}
    silver={true}
    gold={true}
  />
  <PricingFeaturesTableFeature
    isBool={false}
    feature='Productos'
    bronze={'50'}
    silver={'100'}
    gold={'500'}
  />
  <PricingFeaturesTableFeature
    isBool={false}
    feature='Imágenes por producto'
    bronze={'5'}
    silver={'10'}
    gold={'20'}
  />
  <PricingFeaturesTableFeature
    isBool={false}
    feature='Variantes por producto'
    bronze={'5'}
    silver={'10'}
    gold={'Ilimitadas'}
  />
  <PricingFeaturesTableFeature
    isBool={true}
    feature='Configurar dominio propio'
    bronze={true}
    silver={true}
    gold={true}
  />
  <PricingFeaturesTableFeature
    isBool={true}
    feature='🎁 Dominio .COM de regalo'
    bronze={false}
    silver={true}
    gold={true}
  />
  <PricingFeaturesTableFeature
    isBool={true}
    feature='Tienda multimoneda'
    bronze={false}
    silver={true}
    gold={true}
  />
  <PricingFeaturesTableFeature
    isBool={true}
    feature='Tienda con soporte en varios idiomas'
    bronze={false}
    silver={true}
    gold={true}
  />
</section>

<style>
  .table {
    border-radius: 1rem;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    background-color: white;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .table__item--features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    width: 100%;
    height: 100%;
    border-top-left-radius: 1rem;
    border-bottom-left-radius: 1rem;
  }

  .table__section-name {
    font-size: 1.1rem;
    background-image: linear-gradient(to right, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .table__name {
    font-size: 1.6rem;
    color: var(--shade-03);
  }

  .table__description {
    color: var(--neutral-08);
  }
</style>
